upstream django {
    server unix:/var/lock/django-app.sock;
}

server {
    listen      80 default_server;

    server_name _;
    charset     utf-8;

    location /media  {
        alias /opt/media;
    }

    location /static {
        alias /opt/staticfiles;
    }

    location / {
        uwsgi_pass  django;
        include     /etc/nginx/uwsgi_params;
    }
}